@page
@model IndexModel
@{
    ViewData["Title"] = "Fixtures";
}

<div class="title-dates">
    <p>Matches</p>
    <button>@(DateTime.Now.Month)/@(DateTime.Now.Day)/@(DateTime.Now.Year)</button>
</div>

@foreach (var tournament in Model.Fixtures)
{
    <div class="matches-container">
        <div class="matches-comp">
            <div class="matches-comp-flag">
                <img src="Flag_of_England.svg" alt="flag" />
            </div>
            <div class="matches-comp-name">England - Premier League</div>
        </div>

        @foreach (var match in tournament)
        {
            <div class="match-container">
                <div class="match-home-team">@match.HomeTeam.Name</div>
                <div class="match-result">2 - 2</div>
                <div class="match-away-team">@match.AwayTeam.Name</div>
            </div>
        }
    </div>
}

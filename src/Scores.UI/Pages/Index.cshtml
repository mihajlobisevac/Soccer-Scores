@page
@model IndexModel
@{
    ViewData["Title"] = "Fixtures";
}

<div class="title-dates">
    <p>Matches</p>
    <button>@(DateTime.Now.Month)/@(DateTime.Now.Day)/@(DateTime.Now.Year)</button>
</div>

@foreach (var fixture in Model.Fixtures)
{
    <div class="matches-container">
        <div class="matches-comp">
            <div class="matches-comp-flag">
                <img src="@fixture.Tournament.Country.Flag" alt="flag" />
            </div>
            <div class="matches-comp-name">@fixture.Tournament.Name</div>
        </div>

        @foreach (var match in fixture.Matches)
        {
            <div class="match-container">
                <a class="match-home-team" asp-page="/club/@match.HomeTeam.Slug}">@match.HomeTeam.Name</a>
                <a class="match-result" asp-page="/match/@match.Id}">2 - 2</a>
                <a class="match-away-team" asp-page="/club/@match.AwayTeam.Slug}">@match.AwayTeam.Name</a>
            </div>
        }
    </div>
}
